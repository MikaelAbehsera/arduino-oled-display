// Creates a single pixel at x,y
void createPixel(int x, int y) {
  display.drawPixel(x, y, WHITE);
}

// Draws a line from top down -> left right
void animatedPixelDrawing() {
  for (int a = 0; a < 128; a++) {
    for (int b = 0; b < 64; b++) {
      display.drawPixel(a, b, WHITE);
      display.display();
      delay(2);
    }
  }
}

// Draws text at x,y
void drawText(string text, int x, int y) {
  display.setTextSize(1);       // Normal 1:1 pixel scale
  display.setTextColor(WHITE);  // Draw white text
  display.setCursor(x, y);      // Start at top-left corner
  display.println(F(text));
}

// Creates a rectangle inside a rectangle, until no more space.
void rectangleAnimation() {
  for (int16_t i = 0; i < display.height() / 2; i += 2) {
    display.drawRect(i, i, display.width() - 2 * i, display.height() - 2 * i, WHITE);
    display.display();
    delay(1);
  }
}

